{
  "name": "localscreencast",
  "version": "0.1.0",
  "description": "PC-to-PC screen mirroring over LAN/WiFi with audio",
  "main": "server.js",
  "bin": "index.js",
  "type": "commonjs",

  "scripts": {
    "start": "concurrently \"node server.js\" \"node turn-server.js\"",
    "dev": "concurrently \"node server.js\" \"node turn-server.js\"",
    "server": "node server.js",
    "turn": "node turn-server.js",
    "build": "pkg . --targets node18-win-x64 --output dist/LocalScreenCast/LocalScreenCast.exe",
    "postbuild": "cpx \"public/**/*\" dist/LocalScreenCast/public && cpx \"LICENSE\" dist/LocalScreenCast && cpx \"README.md\" dist/LocalScreenCast"
  },

  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.22.1",
    "node-turn": "^0.0.6",
    "werift": "^0.22.2",
    "ws": "^8.19.0"
  },

  "devDependencies": {
    "concurrently": "^9.2.1",
    "pkg": "^5.8.1",
    "cpx": "^1.5.0"
  },

  "license": "MIT"
}
